<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timeSelectHeadline"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".fragments.TimeSelectFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Select start time and end time for your shift at selected day"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Start Time Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="50dp"
        android:background="?attr/editTextBackground"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/startTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/baseline_access_time_24"
            android:gravity="center"
            android:text="Start time"
            android:textSize="18sp" />

        <Button
            android:id="@+id/startTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/editTextBackground"
            android:gravity="center"
            android:text="00:00" />

    </LinearLayout>

    <!-- End Time Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="70dp"
        android:background="?attr/editTextBackground"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/endTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/baseline_access_time_24"
            android:gravity="center"
            android:text="End Time"
            android:textSize="18sp" />

        <Button
            android:id="@+id/endTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/editTextBackground"
            android:gravity="center"
            android:text="00:00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/AssignShitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="schedule my shift" />
    </LinearLayout>
</LinearLayout>
